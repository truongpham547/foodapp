<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#CFB5B5</item>
        <item name="colorControlActivated">@color/yellowstar</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">#4bb6ef</item>
        <item name="colorAccent">#4bb6ef</item>
        <item name="android:colorControlActivated">#4bb6ef</item>
        <item name="colorControlNormal">#4bb6ef</item>
        <item name="colorControlActivated">#4bb6ef</item>
    </style>

</resources>
